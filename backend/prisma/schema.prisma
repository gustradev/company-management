generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  passwordHash String
  isVerified   Boolean  @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tokens AuthToken[]
}

enum AuthTokenType {
  VERIFY_EMAIL
  RESET_PASSWORD
}

model AuthToken {
  id        Int           @id @default(autoincrement())
  userId    Int
  type      AuthTokenType
  tokenHash String
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime      @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([type])
  @@index([expiresAt])
}
